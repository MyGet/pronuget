@model SearchPortal.Web.ViewModels.SearchFormViewModel
@{
    ViewBag.Title = "Start your Search at SearchPortal";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="editor-label">
        @Html.LabelFor(model => model.SearchTerm):
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.SearchTerm)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(model => model.SearchEngine):
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.SearchEngine, Model.AvailableSearchEngines)
    </div>
    
    <p>
        <input type="submit" value="Search"/>
    </p>
}